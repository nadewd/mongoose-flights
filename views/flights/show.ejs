<%- include('../partials/header') %>

<section>
  <div>Airline: <%= flight.airline %></div>
  <div>Airport: <%= flight.airport %> </div>
  <div>Flight Number: <%= flight.flightNo %></div>
  <div>Departs: <%= flight.departs %></div>
</section>

<br><br><h2>Destinations</h2>
<form id="add-destination-form" method="POST"
  action="/flights/<%= flight._id %>/destinations">
  <label>Airport:</label>
  <select name="airport">
    <option value="LAX">LAX</option>
    <option value="ONT">ONT</option>
    <option value="OAK">OAK</option>
    <option value="SFO">SFO</option>
    <option value="JFK">JFK</option>
  </select>
  <label>Arrival:
    <input type="datetime-local" name="arrival">
  </label>
  <br><br><input type="submit" value="Add Destination">
</form>

<% if (flight.destinations.length) { %>
  <table>
    <thead>
      <tr>
        <th>Airport</th>
        <th>Arrival</th>
      </tr>
    </thead>
    <tbody>
      <% flight.destinations.forEach(function(destination) { %>
        <tr>
          <td><%= destination.airport %></td>
          <td><%= destination.arrival %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Destinations Yet</h5>
<% } %>
<%- include('../partials/footer') %>